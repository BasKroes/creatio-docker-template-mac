<?xml version="1.0" encoding="utf-8"?>
<connectionStrings>
  <!-- PostgreSQL Database Connection -->
  <!-- Note: 'postgres' is the Docker service name, which resolves via Docker network -->
  <add name="db" 
       connectionString="Server=postgres;Port=5432;Database=creatio_db;User ID=creatio_user;password=CreatioUser123!;Timeout=500;CommandTimeout=400;MaxPoolSize=1024;" />
  
  <!-- Redis Caching Server -->
  <!-- Note: 'redis' is the Docker service name -->
  <add name="redis" 
       connectionString="host=redis;db=0;port=6379" />
  
  <!-- Temp Directory Path -->
  <add name="tempDirectoryPath" 
       connectionString="/tmp/creatio" />
  
  <!-- Optional: InfluxDB for analytics (can be disabled) -->
  <add name="influx" 
       connectionString="url=;user=;password=;batchIntervalMs=5000" />
  
  <!-- Optional: Performance logging (can be disabled) -->
  <add name="clientPerformanceLoggerServiceUri" 
       connectionString="" />
  
  <!-- Optional: Message broker for async operations (can be disabled for dev) -->
  <add name="messageBroker" 
       connectionString="" />
</connectionStrings>