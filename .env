# Creatio Docker Environment Configuration
# Copy to .env.local for local overrides

# Project name
COMPOSE_PROJECT_NAME=creatio-dev-mac

# PostgreSQL Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
PG_SYSADMIN_PASSWORD=SysAdmin123!
PG_USER_PASSWORD=CreatioUser123!

# Creatio Database
CREATIO_DB_NAME=creatio_db

# Redis Settings
REDIS_PORT=6379

# Creatio App Settings
CREATIO_HTTP_PORT=5000
CREATIO_HTTPS_PORT=5002
ASPNETCORE_ENVIRONMENT=Development

# Timezone (Europe/Amsterdam for Netherlands)
TZ=Europe/Amsterdam
